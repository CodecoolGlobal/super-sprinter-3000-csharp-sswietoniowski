@page
@using SuperSprinter3000.WebUI.RazorPages.DataAccess.Entities
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model EditModel

@{
    ViewData["Title"] = "Edit User Story";
}

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger">There are errors:</div>
            <div class="form-group">
                <label asp-for="Input.Title" class="control-label"></label>
                <input asp-for="Input.Title" class="form-control" />
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Description" class="control-label"></label>
                <textarea asp-for="Input.Description" class="form-control"></textarea>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.AcceptanceCriteria" class="control-label"></label>
                <textarea asp-for="Input.AcceptanceCriteria" class="form-control"></textarea>
                <span asp-validation-for="Input.AcceptanceCriteria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.BusinessValue" class="control-label"></label>
                <input asp-for="Input.BusinessValue" class="form-control" />
                <span asp-validation-for="Input.BusinessValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Estimation" class="control-label"></label>
                <input asp-for="Input.Estimation" class="form-control" />
                <span asp-validation-for="Input.Estimation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Status" class="control-label"></label>
                <select asp-for="Input.Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" async="true" />
}